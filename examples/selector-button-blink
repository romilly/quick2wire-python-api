#!/usr/bin/env python3

import sys
import os
from contextlib import closing
from quick2wire.gpio import gpio, Both, In, Out
from quick2wire.selector import Selector, Timer

blink_rate=2.0

with gpio.pin(0, direction=In, interrupt=Both) as button_pin, \
     gpio.pin(1, direction=Out) as led_pin, \
     Timer(interval=1/blink_rate) as timer, \
     Selector() as selector:
    
    selector.add(button_pin)
    selector.add(timer)
    
    print("ready")
    
    while True:
        selector.wait()
        
        if selector.ready == button_pin:
            if button_pin.value:
                led_pin.value = 1
                timer.start()
            else:
                led_pin.value = 0
                timer.stop()
        elif selector.ready == timer:
            timer.wait()
            led_pin.value = not led_pin.value
